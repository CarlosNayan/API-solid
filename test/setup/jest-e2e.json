{
  "moduleFileExtensions": ["js", "json", "ts"],
  "bail": true,
  "rootDir": "../",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)": "<rootDir>/../src/$1",
    "^test/(.*)": "<rootDir>/../test/$1"
  },
  "setupFiles": ["<rootDir>/../test/setup/useLocalDatabase.ts"]
}
